{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json", 
      "use": "@vercel/node",        
      "config": {
        "includeFiles": ["server/**"]  
      }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",           
      "use": "@vercel/static-build",   
      "config": {
        "distDir": "dist"            
      }
    }
  ],
  "routes": [
    {
      "src": "/api/server",             
      "dest": "/api/server.js"         
    },
    {
      "src": "/(.*)",                
      "dest": "/$1"                   
    }
  ]
}
